{
    "entrypoint": "index.html",
    "shell": "src/gomp-app.js",
    "sources": [
        "src/**/*",
        "*"
    ],
    "fragments": [
        "src/admin-view.js",
        "src/create-view.js",
        "src/home-view.js",
        "src/login-view.js",
        "src/recipes-view.js",
        "src/search-view.js",
        "src/settings-view.js",
        "src/status-404-view.js"
    ],
    "extraDependencies": [
        "node_modules/@webcomponents/webcomponentsjs/webcomponents-loader.js",
        "node_modules/web-animations-js/*.js"
    ],
    "builds": [{
        "name": "default",
        "browserCapabilities": ["es2018", "push"],
        "js": {"minify": true, "compile": false},
        "css": {"minify": true},
        "html": {"minify": true},
        "bundle": false,
        "addServiceWorker": true,
        "addPushManifest": true
    }],
    "moduleResolution": "node",
    "npm": true,
    "lint": {
      "rules": [
        "polymer-3"
      ]
    }
}
