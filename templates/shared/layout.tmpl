<!DOCTYPE html>
<html>
    <head>
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!--Import materialize.css-->
        <link rel="stylesheet" href="{{RootUrlPath}}/css/materialize.min.css" media="screen,projection">

        <!-- Custom GOMP styles -->
        <link rel="stylesheet" type="text/css" href="{{RootUrlPath}}/css/gomp.css">

		{{ partial "css" }}

        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <header class="navbar-fixed">
            <nav class="blue">
                <a href="{{RootUrlPath}}/" class="brand-logo hide-on-med-and-down">GOMP: Go Meal Planner</a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="{{RootUrlPath}}/">Home</a></li>
                    <li><a href="{{RootUrlPath}}/recipes">Recipes</a></li>
                </ul>
                <a href="{{RootUrlPath}}/" class="brand-logo center hide-on-small-only hide-on-large-only">GOMP</a>
                <div class="nav-wrapper right">
                    <form class="nav-wrapper" action="{{RootUrlPath}}/recipes">
                        <div class="input-field nav-wrapper">
                            <input id="search" name="q" type="search" placeholder="Search..." required>
                            <label for="search"><i class="material-icons">search</i></label>
                        </div>
                    </form>
                </div>
                <ul id="slide-out" class="side-nav">
                    <li><a href="{{RootUrlPath}}/">Home</a></li>
                    <li><a href="{{RootUrlPath}}/recipes">Recipes</a></li>
                 </ul>
                 <a href="#" data-activates="slide-out" class="button-collapse">
                    <i class="material-icons">menu</i>
                </a>
            </nav>
        </header>

        <main>
			{{ partial "content" }}
        </main>

        <footer class="page-footer no-padding grey">
            <section class="footer-copyright">
                <section class="container">
                    <span>&copy; 2016 Chad Weimer</span>
                </section>
            </section>
        </footer>

        <!--Import jQuery before materialize.js-->
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="{{RootUrlPath}}/js/materialize.min.js"></script>
        <script type="text/javascript" src="{{RootUrlPath}}/js/gomp.js"></script>
		{{ partial "js" }}
    </body>
</html>
