<!DOCTYPE html>
<html>
    <head>
        <!--Import Google Icon Font-->
        <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons">

        <!--Import materialize.css-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css" media="screen,projection">

        <!-- Custom GOMP styles -->
        <link rel="stylesheet" type="text/css" href="{{RootUrlPath}}/css/gomp.css">

        {{ partial "css" }}

        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <header class="navbar-fixed">
            <nav class="blue">
                <div class="nav-wrapper">
                    <a href="{{RootUrlPath}}/" class="brand-logo left hide-on-med-and-down">{{ApplicationTitle}}</a>
                    <ul class="right hide-on-med-and-down">
                        <li><a href="{{RootUrlPath}}/">Home</a></li>
                        <li><a href="{{RootUrlPath}}/recipes">Recipes</a></li>
                    </ul>
                    <form class="nav-wrapper right" action="{{RootUrlPath}}/recipes">
                        <div class="input-field nav-wrapper">
                            <input id="search" name="q" type="search" placeholder="Search..." required>
                            <label for="search"><i class="material-icons">search</i></label>
                        </div>
                    </form>
                    <ul id="slide-out" class="side-nav">
                        <li><a href="{{RootUrlPath}}/" class="grey-text light truncate">{{ApplicationTitle}}</a></li>
                        <li><a href="{{RootUrlPath}}/">Home</a></li>
                        <li><a href="{{RootUrlPath}}/recipes">Recipes</a></li>
                    </ul>
                    <a href="#" data-activates="slide-out" class="button-collapse">
                        <i class="material-icons">menu</i>
                    </a>
                </div>
            </nav>
        </header>

        <main>
            {{ partial "content" }}
        </main>

        <footer class="page-footer no-padding grey lighten-1">
            <section class="footer-copyright">
                <section class="container">
                    <span>Powered by <a href="https://github.com/chadweimer/gomp">GOMP</a>. &copy; 2016 Chad Weimer</span>
                </section>
            </section>
        </footer>

        <!--Import jQuery before materialize.js-->
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        
        <!--Import materialize.js-->
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
        
        <!-- Custom GOMP scripts -->
        <script type="text/javascript" src="{{RootUrlPath}}/js/gomp.js"></script>
        {{ partial "js" }}
    </body>
</html>
