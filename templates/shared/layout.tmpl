<!DOCTYPE html>
<html>
    <head>
        <title>{{ApplicationTitle}}</title>
        <meta name="application-name" content="{{ApplicationTitle}}">
        <meta name="apple-mobile-web-app-title" content="{{ApplicationTitle}}">
        <meta name="theme-color" content="#ffffff">
        
        {{if FaviconRootPath}}
        <link rel="apple-touch-icon" sizes="180x180" href="{{RootUrlPath}}{{FaviconRootPath}}apple-touch-icon.png">
        <link rel="icon" type="image/png" href="{{RootUrlPath}}{{FaviconRootPath}}favicon-32x32.png" sizes="32x32">
        <link rel="icon" type="image/png" href="{{RootUrlPath}}{{FaviconRootPath}}favicon-16x16.png" sizes="16x16">
        <link rel="manifest" href="{{RootUrlPath}}{{FaviconRootPath}}manifest.json">
        <link rel="mask-icon" href="{{RootUrlPath}}{{FaviconRootPath}}safari-pinned-tab.svg" color="#5bbad5">
        <link rel="shortcut icon" href="{{RootUrlPath}}{{FaviconRootPath}}favicon.ico">
        <meta name="msapplication-config" content="{{RootUrlPath}}{{FaviconRootPath}}browserconfig.xml">
        {{end}}

        <!--Import Google Icon Font-->
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

        <!--Import materialize.css-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css" media="screen,projection">

        <!-- Custom GOMP styles -->
        <link rel="stylesheet" type="text/css" href="{{RootUrlPath}}/css/gomp.css">

        {{ partial "css" }}

        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <header class="navbar-fixed">
            <nav class="blue">
                <div class="nav-wrapper">
                    <a href="{{RootUrlPath}}/" class="brand-logo left hide-on-med-and-down">{{ApplicationTitle}}</a>
                    {{if .User }}
                    <ul class="right hide-on-med-and-down">
                        <li><a href="{{RootUrlPath}}/">Home</a></li>
                        <li><a href="{{RootUrlPath}}/recipes">Recipes</a></li>
                        <li>
                            <a id="userMenuLarge" class="dropdown-button" href="#!" data-activates="userDropdown">
                                {{.User.Username}}<i class="material-icons right">arrow_drop_down</i>
                            </a>
                            <ul id="userDropdown" class="dropdown-content">
                                <li><a href="{{RootUrlPath}}/logout">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="nav-wrapper right" action="{{RootUrlPath}}/recipes">
                        <input type="hidden" name="clear" value="true">
                        <div class="input-field nav-wrapper">
                            <input id="search" name="q" type="search" placeholder="Search..." required>
                            <label for="search"><i class="material-icons">search</i></label>
                        </div>
                    </form>
                    {{end}}
                    <ul id="slide-out" class="side-nav collapsible collapsible-accordion">
                        <li><a href="{{RootUrlPath}}/" class="grey-text light truncate">{{ApplicationTitle}}</a></li>
                        {{if .User }}
                        <li><a href="{{RootUrlPath}}/">Home</a></li>
                        <li><a href="{{RootUrlPath}}/recipes">Recipes</a></li>
                        <li>
                            <a class="collapsible-header" href="#!"><strong>{{.User.Username}}</strong></a>
                            <div class="collapsible-body">
                                <ul>
                                    <li><a href="{{RootUrlPath}}/logout">Logout</a></li>
                                </ul>
                            </div>
                        </li>
                        {{end}}
                    </ul>
                    <a href="#" data-activates="slide-out" class="button-collapse">
                        <i class="material-icons">menu</i>
                    </a>
                </div>
            </nav>
        </header>

        <main>
            {{ partial "content" }}
        </main>

        <footer class="page-footer no-padding grey lighten-1">
            <div class="container">
                <div class="row">
                    <div class="col s12 l12">
                        <h5 class="white-text">Credits</h5>
                        <span class="white-text">
                            Powered by <a href="https://github.com/chadweimer/gomp">GOMP</a></li>. Favicon made by <a href="http://www.freepik.com/">Freepik</a> from <a href="http://www.flaticon.com/">www.flaticon.com</a>.
                        </span>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    <span>&copy; 2016 Chad Weimer</span>
                </div>
            </div>
        </footer>

        <!--Import jQuery before materialize.js-->
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        
        <!--Import materialize.js-->
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
        
        <!-- Custom GOMP scripts -->
        <script type="text/javascript" src="{{RootUrlPath}}/js/gomp.js"></script>
        {{ partial "js" }}
    </body>
</html>
